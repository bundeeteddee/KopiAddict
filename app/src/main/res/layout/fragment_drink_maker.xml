<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="drink"
            type="com.tinytinybites.android.kopiaddict.model.Drink"/>
    </data>

    <RelativeLayout
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg_pattern"
        android:transitionName="@string/transition_background">

        <com.tinytinybites.android.kopiaddict.view.WaveView
            android:id="@+id/wave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.v7.widget.CardView
            android:id="@+id/drink_maker_question_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@color/drinks_maker_card_background">

            <LinearLayout
                android:id="@+id/drink_maker_question_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/question_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:src="@drawable/img_composition_evaporated_milk"
                    />

                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    tools:text="Would you like Tea, Coffee or Tea + Coffee?"/>

                <LinearLayout
                    android:id="@+id/drink_maker_choice_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Yes"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="No"/>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

</layout>