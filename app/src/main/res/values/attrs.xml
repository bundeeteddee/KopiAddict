<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlantedView">
        <attr name="backgroundColor" format="color"/>
        <attr name="hasShadow" format="boolean"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowRadius" format="float"/>
        <attr name="shadowDy" format="float"/>
        <attr name="slantMode" format="enum">
            <enum name="slant_down_fill_top" value="1"></enum>
            <enum name="slant_up_fill_top" value="2"></enum>
            <enum name="slant_down_fill_bottom" value="3"></enum>
            <enum name="slant_up_fill_bottom" value="4"></enum>
        </attr>
        <attr name="slantRatio" format="fraction"/>
    </declare-styleable>
</resources>